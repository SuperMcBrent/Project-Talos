<Window x:Class="Client.Views.ProfileEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Client.Views"
        xmlns:u="clr-namespace:Client.Utilities"
        xmlns:m="clr-namespace:Client.Models"
        xmlns:w="clr-namespace:System;assembly=mscorlib" 
        mc:Ignorable="d" 
        Height="420" Width="800"
        Title="Profile Editor"
        Icon="../Icons/Main.png"
        Name="ProfileEditorWindow"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding ProfileEditor, Source={StaticResource Locator}}"
        d:DataContext="{d:DesignData /SampleData/ProfileEditorViewSampleData.xaml}" Closing="ProfileEditorWindow_Closing">
    <Window.Background>
        <DynamicResource ResourceKey="AccentColor1" />
    </Window.Background>
    <Window.Resources>
        <u:BoolToStringConverter x:Key="BoolToString" FalseValue="No" TrueValue="Yes" />
        <SolidColorBrush x:Key="NiceGray" Color="#555555" />
        <SolidColorBrush x:Key="AccentColor1" Color="DarkSlateGray" />
        <SolidColorBrush x:Key="AccentColor2" Color="DimGray" />
        <SolidColorBrush x:Key="AccentColor3" Color="Teal" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MaxWidth="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <GroupBox
            Padding="3" Margin="5"
            BorderBrush="black" BorderThickness="1">
            <GroupBox.Header>
                <TextBlock Text="Profiles" FontWeight="Bold"/>
            </GroupBox.Header>
            <ScrollViewer
            VerticalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding ProfilesList}">
                    <ItemsControl.Resources>
                        <DataTemplate DataType="{x:Type m:Profile}">
                            <Border Style="{StaticResource ListItemBorderStyle}"
                                    Background="{StaticResource AccentColor2}" MouseLeftButtonDown="SelectProfile_Click">
                                <DockPanel >
                                    <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                                        <TextBlock Text="{Binding ProfileName}" IsHitTestVisible="False"
                                               HorizontalAlignment="Left" FontSize="20"/>
                                        <TextBlock Text="{Binding UserName}" IsHitTestVisible="False"
                                               Grid.Row="1"  HorizontalAlignment="Left" FontSize="16"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" DockPanel.Dock="Bottom"
                                                HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <TextBlock IsEnabled="{Binding IsActive}" IsHitTestVisible="False"
                                                   HorizontalAlignment="Right" FontSize="20">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Text" Value="&#x2714;"/>
                                                            <Setter Property="Foreground" Value="DarkGreen"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type m:CustomListAddButton}">
                            <Border Style="{StaticResource ListItemBorderStyle}"
                                    Background="{StaticResource AccentColor2}" MouseLeftButtonDown="NewProfile_Click">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="3">
                                    <Image Source="../Icons/New.png" Height="42"
                                       IsHitTestVisible="False"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.Resources>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
        <DockPanel Grid.Column="1">
            <GroupBox
                    Padding="3" Margin="5 0 5 5" DockPanel.Dock="Bottom"
                    BorderBrush="black" BorderThickness="1">
                    <GroupBox.Header>
                        <TextBlock Text="Commands" FontWeight="Bold"/>
                    </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Margin="0" Padding="4" Click="DeleteAllProfiles_Click">
                        <Button.ToolTip>
                            <TextBlock Text="Delete all profiles"/>
                        </Button.ToolTip>
                        <TextBlock Text="Delete All Profiles"/>
                    </Button>
                    <Button Grid.Column="3" Margin="4 0 0 0" Padding="4" Click="Close_Click"
                            Width="{Binding Path=ActualWidth, ElementName=OtherButton}">
                        <Button.ToolTip>
                            <TextBlock Text="Discard all changes made in this session."/>
                        </Button.ToolTip>
                        <TextBlock Text="Close" />
                    </Button>
                    <Button Grid.Column="2" Margin="0 0 4 0" Padding="4" Click="ConfirmChangesEndExit_Click"
                            Name="OtherButton">
                        <Button.ToolTip>
                            <TextBlock Text="Save all changes made in this session." />
                        </Button.ToolTip>
                        <TextBlock Text="Apply Changes"/>
                    </Button>
                </Grid>
            </GroupBox>
            <GroupBox
                Padding="3" Margin="5"
                BorderBrush="black" BorderThickness="1">
                <GroupBox.Header>
                    <TextBlock Text="SelectedProfile" FontWeight="Bold"/>
                </GroupBox.Header>
            <Grid DataContext="{Binding SelectedProfile}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                    <Border Style="{StaticResource ListItemBorderStyle}"
                        Background="{StaticResource AccentColor2}">
                        <DockPanel >
                            <StackPanel Orientation="Vertical" Margin="4" DockPanel.Dock="Left">
                                <TextBlock Text="{Binding ProfileName}" FontSize="20"/>
                                <TextBlock Text="{Binding UserName}" HorizontalAlignment="Left" FontSize="16"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Margin="4"
                                        HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock IsEnabled="{Binding IsActive}" IsHitTestVisible="False"
                                                   HorizontalAlignment="Right" FontSize="20">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="True">
                                                    <Setter Property="Text" Value="&#x2714;"/>
                                                    <Setter Property="Foreground" Value="DarkGreen"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <!--<TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToString}, StringFormat=Active: {0}}" HorizontalAlignment="Right" FontSize="10"/>-->
                                <TextBlock Text="{Binding Id, StringFormat=Id: {0}}" HorizontalAlignment="Right" FontSize="10"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding IsDefault, Converter={StaticResource BoolToString}, StringFormat=Default: {0}}" 
                                               HorizontalAlignment="Right" FontSize="10" Margin="0 0 15 0" VerticalAlignment="Top"/>
                                    <TextBlock Text="{Binding CreatedTime, StringFormat=Created: {0}}" 
                                               HorizontalAlignment="Right" FontSize="10"/>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Vertical" Margin="4 14 4 4" Grid.Column="1">
                            <CheckBox IsChecked="{Binding IsDefault}" IsHitTestVisible="false">
                                <TextBlock Text="Is Default"/>
                            </CheckBox>
                            <CheckBox IsChecked="{Binding IsActive}" IsHitTestVisible="false">
                                <TextBlock Text="Is Active"/>
                            </CheckBox>
                            <TextBlock Text="{Binding TrackedTalonFileNames.Count}" />
                        </StackPanel>
                        <StackPanel Orientation="vertical" Margin="4" Grid.Column="2"
                            VerticalAlignment="Bottom" Width="120">
                            <Button Margin="4" Height="28" HorizontalContentAlignment="left" Padding="4" 
                                Click="SelectActiveProfile_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="../Icons/Apply.png"/>
                                        <TextBlock Text="Select Profile" Margin="8 0 0 0"/>
                                    </StackPanel>
                                </Button.Content>
                                <Button.ToolTip>
                                    <TextBlock Text="Make Active"/>
                                </Button.ToolTip>
                            </Button>
                            <Button Margin="4" Height="28" HorizontalContentAlignment="left" Padding="4">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="../Icons/Import.png"/>
                                        <TextBlock Text="Import Profile" Margin="8 0 0 0"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button Margin="4" Height="28" HorizontalContentAlignment="left" 
                                    Click="ImportProfile_Click" Padding="4">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="../Icons/Export.png"/>
                                        <TextBlock Text="Export Profile" Margin="8 0 0 0"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button Margin="4" Height="28" HorizontalContentAlignment="left"
                                Click="DeleteProfile_Click" Padding="4">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="../Icons/Delete.png"/>
                                        <TextBlock Text="Delete Profile" Margin="8 0 0 0"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                        <GroupBox
                            Header="Tracked Files"
                            Width="150"
                            Padding="3" Margin="5"
                            BorderBrush="black" BorderThickness="1">
                            <ScrollViewer VerticalScrollBarVisibility="hidden" Name="BotListContainer">
                                <ItemsControl ItemsSource="{Binding DataContext.TrackedBotsList , ElementName=ProfileEditorWindow}">
                                    <ItemsControl.Resources>
                                        <DataTemplate DataType="{x:Type m:Bot}">
                                            <Border Style="{StaticResource ListItemBorderStyle}"
                                                Background="{StaticResource AccentColor2}" Margin="3" Padding="1">
                                                <Border.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Click="UntrackFile_Click">
                                                            <MenuItem.Header>
                                                                <TextBlock Text="Untrack File"/>
                                                            </MenuItem.Header>
                                                            <MenuItem.Icon>
                                                                <Image Source="../Icons/Delete.png" Width="20"/>
                                                            </MenuItem.Icon>
                                                        </MenuItem>
                                                    </ContextMenu>
                                                </Border.ContextMenu>
                                                <StackPanel Orientation="Vertical" Width="{Binding Path=ActualWidth, ElementName=BotListContainer}" Margin="2">
                                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Left"
                                                        IsHitTestVisible="False"/>
                                                    <TextBlock Text="{Binding BotFilePath}" HorizontalAlignment="Left"
                                                               ToolTip="{Binding BotFilePath}"
                                                        IsHitTestVisible="False" FontSize="8" TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                        <DataTemplate DataType="{x:Type m:CustomListAddButton}">
                                            <Border Style="{StaticResource ListItemBorderStyle}" Margin="3" Padding="1"
                                                Background="{StaticResource AccentColor2}" MouseLeftButtonDown="AddTrackedFile_Click">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2">
                                                    <Image Source="../Icons/New.png" Height="24"
                                                        IsHitTestVisible="False"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.Resources>
                                </ItemsControl>
                            </ScrollViewer>
                        </GroupBox>
                    </Grid>
                </Grid>
            </GroupBox>
        </DockPanel>
    </Grid>
</Window>
